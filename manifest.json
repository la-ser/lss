{
  "manifest_version": 3,
  "name": "LSS Style",
  "version": "1.0",
  "description": "Automatically injects custom CSS into polizei.leitstellenspiel.de.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://polizei.leitstellenspiel.de/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CSS Injector Options"
  }
}
